{
  "name": "contact-management-system",
  "version": "1.0.0",
  "description": "A secure, modular contact management system using Userbase for encrypted storage and real-time synchronization, fully compliant with RFC 9553.",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "python -m http.server 8080",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.js"
  },
  "keywords": [
    "contact-management",
    "vcard",
    "rfc9553",
    "userbase",
    "encrypted-storage",
    "real-time-sync",
    "privacy-first"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.8",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.0",
    "vite": "^4.5.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": ["<rootDir>/tests/**/*.test.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/contact-management-system.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/contact-management-system/issues"
  },
  "homepage": "https://github.com/yourusername/contact-management-system#readme"
}